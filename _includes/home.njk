<!doctype html>
<html lang="en-US" class="h-screen bg-black">
{% include 'head.njk' %}
<body class="bg-white">

{% include 'header.njk' %}

<div style="background-image: url('{{ introduction.backgroundPicture | safe }}')" class="py-16 xl:py-32 px-6 sm:px-12 bg-stretch bg-no-repeat bg-center">
  <div class="max-w-xl mx-auto flex">
    <div class="bg-black bg-opacity-60 rounded p-4">
      <h1 class="font-serif text-center text-4xl font-medium my-6 mx-auto text-white">
        {{ introduction.headline }}
      </h1>
      <div class="prose prose-xl text-center text-white">
        {{ introduction.content | safe }}
      </div>
    </div>
  </div>
</div>

<div class="bg-blue-100 py-16 xl:py-16 px-6 sm:px-12">
  <div class="max-w-4xl mx-auto">
    <div class="md:grid md:grid-cols-5 gap-8 flex flex-col-reverse md:flex-col">
      <div class="col-span-2 mx-auto">
        <img class="w-100 filter drop-shadow-lg" src="{{ itemsNeeded.picture.file }}" alt="{{ itemsNeeded.picture.description }}"/>
      </div>
      <div class="col-span-3">
        <h2 id="items-accepted" class="font-serif text-left text-4xl lg:text-5xl font-medium mb-6">{{ itemsNeeded.headline }}</h2>
        <div class="prose prose-xl">{{ itemsNeeded.content | safe }}</div>
        <ul class="text-xl max-w-md">
          {% for item in itemsNeeded.items %}
            <li class="my-2">
              <h3 class="font-semibold">{{ item.name }}</h3>
              <p class="text-gray-600">{{ item.description }}</p>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="bg-yellow-100 py-16 xl:py-16 px-6 sm:px-12">
  <div class="max-w-4xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <h2 id="how-to-schedule" class="font-serif  text-left text-4xl lg:text-5xl font-medium mb-6">{{ howToDonate.headline }}</h2>
        <div class="prose prose-xl">
          {{ howToDonate.content | safe }}
        </div>

        <p>
          <a href="/pickup/" class="inline-block text-xl bg-red-700 text-white mt-6 px-6 py-2 rounded-md hover:bg-red-800" data-analytics-event="outbound_link_clicked">
              Schedule a pickup
          </a>
        </p>

        {% if website.donations %}
          <a href="{{ website.donations }}" class="inline-block text-xl border border-gray-400 bg-gray-200 text-gray-600 mt-2 px-6 py-2 rounded-md hover:bg-gray-300" data-analytics-event="outbound_link_clicked">
            Donate online
          </a>
        {% endif %}

      </div>
      <div class="justify-self-center md:justify-self-end">
        <img class="w-100 filter drop-shadow-lg" src="{{ howToDonate.picture.file }}" alt="{{ howToDonate.picture.description }}"/>
      </div>

    </div>
  </div>
</div>

{% include 'footer.njk' %}

</body>
</html>
