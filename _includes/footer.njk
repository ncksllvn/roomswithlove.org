<footer>
  <div class="bg-black px-6 lg:px-0">
    <div class="max-w-4xl mx-auto py-8">
      <div class="md:flex items-center">
        <div class="flex-grow text-center md:text-left">
          <div class="text-white">
            {% if website.facebook %}
              <div class="mb-2">
                <a title="Find us on Facebook" href="{{ website.facebook }}" data-analytics-event="outbound_link_clicked">
                  <svg class="h-6 w-6 inline-block" version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                    width="60.734px" height="60.733px" viewBox="0 0 60.734 60.733" style="enable-background:new 0 0 60.734 60.733;"
                    xml:space="preserve">
                    <path fill="#fff" d="M57.378,0.001H3.352C1.502,0.001,0,1.5,0,3.353v54.026c0,1.853,1.502,3.354,3.352,3.354h29.086V37.214h-7.914v-9.167h7.914
                      v-6.76c0-7.843,4.789-12.116,11.787-12.116c3.355,0,6.232,0.251,7.071,0.36v8.198l-4.854,0.002c-3.805,0-4.539,1.809-4.539,4.462
                      v5.851h9.078l-1.187,9.166h-7.892v23.52h15.475c1.852,0,3.355-1.503,3.355-3.351V3.351C60.731,1.5,59.23,0.001,57.378,0.001z"/>
                  </svg>
                </a>
              </div>
            {% endif %}
            <address class="not-italic">
              <p class="text-lg font-serif font-bold">Contact us</p>
              {% if website.phone %}
                <a class="hover:underline" href="{{ website.phone | telephoneLink }}" data-analytics-event="outbound_link_clicked">
                  {{ website.phone }}
                </a>
                <br>
              {% endif %}
              <a class="hover:underline" href="mailto:{{ website.email }}" data-analytics-event="outbound_link_clicked">
                {{ website.email }}
              </a>
              <p class="text-lg font-serif font-bold mt-2">Location</p>
              {% if website.address.city %}
                {{ website.address.street }}<br>
                {{ website.address.city }}, {{ website.address.state }} {{ website.address.zip }}
              {% endif %}
            </address>
          </div>
        </div>
        <div class="py-4">
          <a href="http://www.christschapel.net" class="block" data-analytics-event="outbound_link_clicked">
            <img class="h-10 md:h-12 mx-auto md:mx-0" src="{{ "/christs-chapel-logo.png" | url }}" alt="Logo for Christ's Chapel"/>
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const eventName = 'outbound_link_clicked';
    const trackedElements = Array.from(
      document.querySelectorAll(`[data-analytics-event="${eventName}"]`)
    );

    for (const element of trackedElements) {
      const url = element.href;

      element.addEventListener('click', () => {
        window.dataLayer.push({ event: eventName, url });
      });
    }
  });
</script>
