  <div class="bg-black px-6 lg:px-0">
    <div class="max-w-4xl mx-auto py-8">
      <address class="text-white not-italic grid md:grid-cols-3">
        <div class="text-center">
          <p class="text-lg font-serif font-bold">Contact us</p>
          {% if website.phone %}
            <a class="hover:underline" href="{{ website.phone | telephoneLink }}" data-analytics-event="outbound_link_clicked">
              {{ website.phone }}
            </a>
            <br>
          {% endif %}
          <a class="hover:underline" href="mailto:{{ website.email }}" data-analytics-event="outbound_link_clicked">
            {{ website.email }}
          </a>
        </div>
        <div class="self-center justify-self-center my-4 md:my-0">
          {% if website.facebook %}
            <div>
              <a title="Find us on Facebook" href="{{ website.facebook }}" data-analytics-event="outbound_link_clicked">
