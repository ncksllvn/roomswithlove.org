{% set fullTitle %}{{ title }} | {{ pkg.websiteMetadata.title }}{% endset %}
{% set fullUrl %}{{ page.url }} | {{ pkg.websiteMetadata.baseUrl }}{% endset %}
<head>
  <meta charset="utf-8">

  <title>{{ fullTitle }}</title>

  <meta name="description" content="{{ description }}">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <meta property="og:title" content="{{ fullTitle }}">
  <meta property="og:url" content="{{ fullUrl }}">

  <meta property="og:type" content="website">
  <meta property="og:image" content="{{ "/tile.png" | url }}">

  <link rel="manifest" href="{{ "/site.webmanifest" | url }}">
  <link rel="apple-touch-icon" href="{{ "/icon.png" | url }}">

  <link rel="stylesheet" href="{{ "/style/main.css" | url }}">
  <meta name="theme-color" content="{{ pkg.websiteMetadata.themeColor }}">
</head>
